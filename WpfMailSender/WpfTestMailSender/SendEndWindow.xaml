<Window x:Class="WpfTestMailSender.SendEndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="SendEndWindow" Height="175" Width="400" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,2,12">
        <Label x:Name="lSendEnd" Content="Работа завершена" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" 
                FontFamily="Arial" Margin="36,33,39,79"   >
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF9FD752" Offset="0.013"/>
                    <GradientStop Color="#FF9FD752" Offset="0.41800001263618469"/>
                    <GradientStop Color="#FF333333" Offset="0.418"/>
                    <GradientStop Color="#FF9FD752" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="252,100,0,0" VerticalAlignment="Top" Width="107" Height="41" FontSize="18" Click="btnOK_Click"/>

    </Grid>
</Window>
